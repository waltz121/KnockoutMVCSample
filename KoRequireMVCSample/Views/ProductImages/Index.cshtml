@using KoRequireMVCSample.Extensions

<div class="container">
    <div class="row">
        <h2 data-bind="text: title"></h2>
    </div>
    <div class="row">
         <table class="table table-striped">
             <thead>
                 <tr>
                     <th scope="col">Edit</th>
                     <th scope="col">Id</th>
                     <th scope="col">ProductId</th>
                     <th scope="col">Description</th>
                 </tr>
             </thead>
             <tbody data-bind="foreach: ListOfProductImages">
                 <tr>
                     <td scope="row"><button class="btn btn-outline-info" data-toggle="modal" data-target="#EditProductImageModalCenter" data-bind="click: $root.EditProductImages">Edit</button></td>
                     <td scope="row" data-bind="text: id"></td>
                     <td scope="row" data-bind="text: ProductId"></td>
                     <td scope="row" data-bind="text: Description"></td>
                 </tr>
             </tbody>
         </table>
    </div>
    <div class="row">
        <div class="col-md-1">
            
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="EditProductImageModalCenter" tabindex="-1" role="dialog" aria-labelledby="EditProductImageModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditProductImageModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form>
                        <div class="form-group">
                            <label for="EditProductImage_Id">Id: </label>
                            <input id="EditProductImage_Id" type="text" class="form-control" data-bind="value: EditProductImageId" disabled/>
                        </div>
                        <div class="form-group">
                            <label for="EditProductImage_ProductId">Product Id: </label>
                            <input id="EditProductImage_ProductId" type="text" class="form-control" data-bind="value: EditProductImageProductId" disabled/>
                        </div>
                        <div class="form-group">
                            <label for="EditProductImage_Description">Product Description: </label>
                            <input id="EditProductImage_Description" type="text" class="form-control" data-bind="value: EditProductImageDescription" />
                        </div>
                        <div class="form-group">
                            <canvas id="EditProductImageCanvas" width=320 height=240></canvas>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Html.InitPageMainModule("vm/ProductImage/productImageviewmodel")
}