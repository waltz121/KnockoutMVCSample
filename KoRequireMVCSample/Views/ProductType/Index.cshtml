@using KoRequireMVCSample.Extensions

<div class="container">
    <div class="row">
        <h2 data-bind="text: title"></h2>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Product Type Code</th>
                    <th scope="col">Product Type Description</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: ProductTypeLists">
                <tr>
                    <td scope="row" data-bind="text: Product_Type_Code"></td>
                    <td scope="row" data-bind="text: Product_Type_Description"></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-1">
            <button class="btn btn-primary" data-bind="click: showAddProductTypeModal">
                Add
            </button>
        </div>
    </div>
</div>


<!-- Modal -->


@section scripts
    {
    @Html.InitPageMainModule("vm/ProductType/productTypeviewmodel")
}

